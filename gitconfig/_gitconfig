[core]
    autocrlf = false
    attributesfile = ./_gitattributes
[color]
    ui = true
[color "branch"]
    current = red
    local = yellow
    remote = green
[color "diff"]
    meta = cyan
    frag = magenta
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[url "https://"]
    insteadOf = git://
[diff]
    algorithm = histogram
[merge]
    ff = false
[alias]
    co = checkout
    sta = status
    stat = status
    stats = status
    statu = status
    add-p = add -p
    commit-v = commit -v
    gs = log --graph \
             --abbrev-commit \
             --decorate \
             --date=relative \
             --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    gas = !git gs --all
    gl = log --graph \
             --abbrev-commit \
             --decorate \
             --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    gal = !git gl --all
    mergeff = merge --ff-only
